import LibCInterface

// ffi func write(fd: i32, buf: i8*, count: u64) -> i64
public func programExit(reason: string)
{
	fprintf(_fdopen(2, "a"), "%s", reason)
	abort()
}

public func assert(b: bool)
{
	if !b
	{
		fprintf(_fdopen(2, "a"), "Assertion failed")
		abort()
	}
}
